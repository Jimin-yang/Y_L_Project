                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textColor="#897E7E"
                    android:textColorHint="#897E7E"
                    android:id="@+id/pwText"
                    />


            </LinearLayout>

