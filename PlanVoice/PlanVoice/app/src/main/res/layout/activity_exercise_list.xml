                            android:layout_marginBottom="5dp"
                            android:textSize="16dp"
                            android:text="벤치 프레스"
                            android:textColor="@color/white"  />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="전반적인 가슴 자극"
