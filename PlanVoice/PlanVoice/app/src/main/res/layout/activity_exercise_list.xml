                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:text="가슴"
                        android:textSize="12dp"
                        android:textColor="#897E7E"
                        android:background="@drawable/edit_text_rounded_background"   />
