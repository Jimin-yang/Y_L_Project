<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="ww"
        android:background="@color/background"
        android:minHeight="?attr/actionBarSize"
        android:paddingHorizontal="2dp"
        android:theme="?attr/actionBarTheme"
        app:title="분석"
        app:titleTextColor="@color/white" >
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white">
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="최근 일주일 분석"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="02.22 ~ 02.28"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_rounded_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:radius="10dp">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_layout_rounded_background"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bu1"
                            android:layout_width="130dp"
                            android:layout_height="20dp"
                            android:layout_margin="3dp"
                            android:background="@drawable/button_text_rounded_background"
                            android:checked="true"
                            android:text="칼로리"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/bu2"
                            android:layout_width="130dp"
                            android:layout_height="20dp"
                            android:layout_margin="3dp"
                            android:background="#00000000"
                            android:text="시간"
                            android:textColor="@color/white" />

                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/chatLL1"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginBottom="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chatLL2"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart2"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginBottom="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="운동 균형도"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_rounded_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:radius="10dp">

                    <LinearLayout
                        android:id="@+id/chatLL3"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart3"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_marginBottom="20dp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation_menu"/>


</androidx.constraintlayout.widget.ConstraintLayout>