<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plen_select_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <!-- 개인 맞춤형 플랜 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="개인 맞춤형 플랜"
                    android:textColor="@color/white" />
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/plan_weakness"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="취약 부위 보완 플랜"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- 선택된 플랜 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="선택된 플랜"
                    android:textColor="@color/white" />
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/selected_plan_button"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="근육량 증가 추천 플랜 (초급)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background"
                            android:enabled="false" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- 근육량 증가 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="근육량 증가"
                    android:textColor="@color/white" />
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/plan_muscle_gain_beginner"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="근육량 증가 추천 플랜 (초급)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                        <Button
                            android:id="@+id/plan_muscle_gain_intro"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="근육량 증가 추천 플랜 (입문)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                        <Button
                            android:id="@+id/plan_muscle_gain_intermediate"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="근육량 증가 추천 플랜 (중급)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                        <Button
                            android:id="@+id/plan_muscle_gain_advanced"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="근육량 증가 추천 플랜 (고급)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- 체지방 감소 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="체지방 감소"
                    android:textColor="@color/white" />
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/plan_fat_loss_intro"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="체지방 감소 추천 플랜 (입문)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                        <Button
                            android:id="@+id/plan_fat_loss_intermediate"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="체지방 감소 추천 플랜 (중급)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                        <Button
                            android:id="@+id/plan_fat_loss_advanced"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="체지방 감소 추천 플랜 (고급)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- 현재 상태 유지 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="현재 상태 유지"
                    android:textColor="@color/white" />
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/plan_maintain_intro"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="현재 상태 유지 플랜 (입문)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                        <Button
                            android:id="@+id/plan_maintain_intermediate"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="현재 상태 유지 플랜 (중급)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                        <Button
                            android:id="@+id/plan_maintain_advanced"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="현재 상태 유지 플랜 (고급)"
                            android:textColor="@color/white"
                            android:background="@drawable/button_text_rounded_background" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
